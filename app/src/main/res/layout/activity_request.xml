<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple"
    android:padding="16dp"
    tools:context=".RequestActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Ptitle_bar_layout">

        <TextView
            android:id="@+id/Ppage_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="요청사항 작성"
            android:textSize="32sp"
            android:textColor="@color/white"
            android:textStyle="bold"/>

        <ImageButton
            android:id="@+id/Psave_note_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="34dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/baseline_done_24"
            app:tint="@color/white" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Ptitle_bar_layout"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_background"
        android:backgroundTint="@color/white"
        android:orientation="vertical"
        android:padding="25dp">

        <EditText
            android:id="@+id/Pnotes_title_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:hint="제목"
            android:padding="12dp"
            android:textColor="@color/black"
            android:textColorHint="@color/grey"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/Pnotes_content_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:gravity="top"
            android:hint="내용"
            android:minLines="15"
            android:padding="12dp"
            android:textColor="@color/black"
            android:textColorHint="@color/grey"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>
</RelativeLayout>